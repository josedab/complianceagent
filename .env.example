# ComplianceAgent Environment Configuration
# Copy to .env and fill in your values

# ===================
# Application
# ===================
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=change-me-to-a-secure-random-string

# ===================
# Database
# ===================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=complianceagent
POSTGRES_PASSWORD=complianceagent
POSTGRES_DB=complianceagent
DATABASE_URL=postgresql+asyncpg://complianceagent:complianceagent@localhost:5432/complianceagent

# ===================
# Redis
# ===================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# ===================
# Elasticsearch
# ===================
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_URL=http://localhost:9200

# ===================
# S3/MinIO Storage
# ===================
S3_ENDPOINT_URL=http://localhost:9000
S3_BUCKET_NAME=complianceagent
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_REGION=us-east-1

# ===================
# GitHub Copilot SDK
# ===================
COPILOT_API_KEY=your-copilot-api-key
COPILOT_API_URL=https://api.githubcopilot.com

# ===================
# GitHub App (for repository integration)
# ===================
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_WEBHOOK_SECRET=

# ===================
# Stripe Billing
# ===================
STRIPE_API_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# ===================
# Email (SMTP)
# ===================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=
FROM_EMAIL=noreply@complianceagent.ai

# ===================
# Frontend
# ===================
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===================
# Monitoring (optional)
# ===================
SENTRY_DSN=
DATADOG_API_KEY=
